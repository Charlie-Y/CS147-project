    <div class="" id="player" ng-controller="BreakPointCtrl" >
    <!-- <div class="smartphone-landscape" id="player" >  -->
        <div class="player-main">
            <div class="player-video-id" data-video-id="{{video.videoURL}}"></div>
            <div class="iframe-wrapper">
                <div class="player-iframe" id="player-iframe"> Video loading! Sit tight</div>
            </div>
            <div class="player-controls">
                <div class="slider-breakpoints" ng-model='breakpoints'>
                    <span class="slider-breakpoint" data-bp-id="\{{sbp.breakPointId}}" ng-repeat="sbp in breakpoints" style="left:\{{sliderBreakpointLeft(sbp)}}%" ng-click="clickedSliderBreakpoint(sbp)" ng-mouseenter="addSegmentDisplayBreakpoint(sbp)" ng-mouseleave="removeSegmentDisplayBreakpoint(sbp)">
                        <i class='fa fa-tint fa-flip-vertical slider-breakpoint-icon' ng-class="{active: isCurrentBreakpoint(sbp)}"></i>
                    </span>
                </div>
                <div class="main-slider" ng-click="clickedSlider($event)">
                    <div class="filled-slider"></div>
                    <!-- <div class="current-breakpoint-slider" style="left:\{{currentSliderLeft()}}%;" ng-show="hasCurrentBreakpoint()"> -->

                    <div class="current-breakpoint-slider" ng-repeat="bp in getSegmentDisplayBreakpoints()" style="left:\{{sliderSegmentLeft(bp)}}%; width:\{{sliderSegmentWidth(bp)}}%"></div>

                    <!-- <div ng-repeat=""class="current-breakpoint-slider" style="left:\{{currentSliderLeft()}}%; width:\{{currentSliderWidth()}}%" ng-show="showBreakpointSlider()"></div> -->


                </div>
                <div class="control-buttons">

                    <a href="#" class="control-button" ng-show="playbackRateExists(.25)">
                        <i class="fa fa-play" ng-click="clickedPlaybackRate(.25)"></i>.25x
                    </a>
                    <a href="#" class="control-button" ng-show="playbackRateExists(.5)">
                        <i class="fa fa-play " ng-click="clickedPlaybackRate(.5)"></i>.5x

                    </a>
                    
                    <a href="#" class="control-button">
                            <i class="fa fa-play control-pauseplay" ng-click="clickedPausePlay()"></i>
                    </a>

                    <a href="#" class="control-button" ng-show="playbackRateExists(1.5)">
                        <i class="fa fa-play " ng-click="clickedPlaybackRate(1.5)"></i>1.5x

                    </a>
                    <a href="#" class="control-button" ng-show="playbackRateExists(2)">
                        <i class="fa fa-play " ng-click="clickedPlaybackRate(2)"></i>2x

                    </a>


                    




                    <a href="#" class="control-time">
                        <a class="control-current-time">
                        </a> /
                        <a class="control-max-time">
                        </a>
                    </a>
                    <a href="#"  class="control-button">
                        <i class="fa fa-volume-up control-sound" ng-click="clickedVolume()"></i>
                    </a>
                    <a href="#" class="control-button">
                        <i class="fa fa-plus control-addBreakpoint" ng-click="clickedAddBreakpoint()"></i>
                        <a class="add-breakpoint-helper">
                            Add Breakpoint
                        </a>
                    </a>
                </div>
            </div>
        </div>
        <div class="player-sidenav">
            <a href="/" onclick="goBack();">
                <div class="player-menu" >
                    Back 
                </div>
            </a> 
            <div class="player-breakpoints" id="player-breakpoints"> 
                <ul class='breakpoints-ul'>
                    <li class="breakpoint-li" ng-repeat="bp in breakpoints">
                        <a class="breakpoint" href=
                        "#" data-bp-id="\{{bp.breakPointId}}" ng-click="clickedBreakpoint(bp)" ng-class="{active: isCurrentBreakpoint(bp)}" ng-mouseenter="addSegmentDisplayBreakpoint(bp)" ng-mouseleave="removeSegmentDisplayBreakpoint(bp)">
                            <div class="breakpoint-time">
                                \{{bp.displayStartTime()}} - \{{bp.displayEndTime()}}
                            </div>
                            <div class="breakpoint-name" contenteditable='true'>
                                \{{bp.desc}}
                            </div>
                        </a>
                        <i class='fa fa-times breakpoint-remove' ng-click="clickedRemoveBreakpoint(bp)"></i>
                    </li>
                </ul>
            </div>
        </div>


        {{!-- <button class="debug-button" ng-click="logBreakPoints()" >CLICK ME</button> --}}

    </div>


         
